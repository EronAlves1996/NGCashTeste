// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id Int @Id @default(autoincrement())
  username String @unique
  password String
  account Accounts @relation(fields: [account_id], references: [id])
  account_id Int 
}

model Accounts {
  id Int @Id @default(autoincrement())
  balance Float
}

model Transactions {
  id Int @Id @default(autoincrement())
  debited_account_id Int
  debited_account Accounts @relation(name: "debited_account",fields: [debited_account_id], references: [id])
  credited_account_id Int
  credited_account Accounts @relation(name: "credited_account", fields: [debited_account_id], references: [id])
  value Float
  created_at DateTime
}
